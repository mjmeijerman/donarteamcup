                    <th>
                        Achternaam
                    </th>
                    <th>
                        Cat.
                    </th>
                    <th>
                        Niv.
                    </th>
                    <th>
                        Nr.
                    </th>
                    <th>

                    </th>
                    <th></th>
                </tr>
                {% for turnster in team.turnsters %}
                    <tr>
                        <td>
                            {{ loop.index }}
                        </td>
                        <td>
                            {{ turnster.voornaam }}
                        </td>
                        <td>
                            {{ turnster.achternaam }}
                        </td>
                        <td>
                            {{ turnster.categorie }}
                        </td>
                        <td>
                            {{ turnster.niveau }}
