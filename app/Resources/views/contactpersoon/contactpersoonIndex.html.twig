                    {% if not loop.last -%}
                        /
                    {%- endif -%}
                {% endfor %}
                ,
                {{ team.wedstrijdRonde.dag }} {{ team.wedstrijdRonde.startTijd | date('d-m-Y') }},
                {{ team.wedstrijdRonde.startTijd | date('H:i') }}
                - {{ team.wedstrijdRonde.eindTijd | date('H:i') }}
