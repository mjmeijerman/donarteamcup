        {#<td class="controle_achternaam">{{ turnster.achternaam }}</td>#}
        {#<td class="controle_geboortejaar">{{ turnster.geboortejaar }}</td>#}
        {#<td class="controle_niveau">{{ turnster.niveau }}</td>#}
        {#</tr>#}
        {#{% endfor %}#}
        {#</table>#}
        {#<br>#}
        {##}
        {#<h4>&#187; Opgeslagen juryleden</h4>#}
